  <body class="bodyContainer">
    <div class="appLogo">
      <a href="/">
        <h1>school manager</h1></a>
      
    </div>
    <div class="formContainer">
      <form class="formC" action="/auth/login" method="post">
        <div class="userNameContainer">
         <label class="labelC" for="email">UserName</label>
         <input class="userNameC" type="text" name="userName" id="userName">
        </div>
        <div class="passwordContainer">
         <label class="labelC" for="password">password</label>
         <input class="passwordC" type="password" name="password" id="password">
        </div>
        <div class="submitbtn">
          <input class="submit" type="submit" value="LOGIN">
        </div>
        <div class="forgotPassword" id="passwordReset">
          <span >Forgot Password?</span>
         </div>
       <div class="register">
         <a href="/registration">Register</a>
       </div>
      </form>
    </div>
    
       <div id="resetForm">
         <form action="" method="post">
           <div class="username">
            <label class="resetLabel" for="username">Username</label>
            <input class="resetUserName" type="text" name="username" id="username">
           </div>
           
           
             <div class="category">
              <label class="resetLabel" for="category">Category</label>
              <input class="resetCategory"  type="text" name="category" id="categoryInpt" placeholder="Student/Admin/Teacher">
             </div>
             <div class="reset">
               <input type="submit" value="Reset">
             </div>
             
           
         </form>
       </div>
       <div class="Loginfooter">
        <p class="adress">visit us at... </p>
        <p class="socialMedia">
            facebook<br>
            instagram<br>
            ourWeb
        </p>
        <div>
          <a href="/">
            <p class="gohome">GO HOME</p></a>
        </div>
        
        
    </div>

    <script src="jquerry.js"></script>
