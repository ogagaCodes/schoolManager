<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/regForm.css">
    <link rel="stylesheet" href="/stylesheets/mediaquery.css">
    <script src="/scripts/form.js" type="text/javascript"></script>
    <title>
        Form
    </title>
</head>

<body class="main">
    <div class="appLogo">
        <a href="/">
          <h1>school mananger</h1></a>
        
      </div>
  
     <form class="mainContainer" action="/auth/signUp" method="POST">
        <div id="container">
            <div class="container">
                <h1 id="erromessage1">
                    
                </h1>
                <div class="formElement">
                    
                    <label for="schoolName">School Name</label>
                    <input class="inpt" type="text" name="schoolName" id="schoolName" autofocus>
                    
                    <hr>
                    <h1 id="emailErrorMsg"></h1>
                </div>
                <div class="formElement">
                    
                    <label for="address">Address</label>
                    <input class="inpt" type="text" name="address" id="address">
                    
                    <hr>
                    <h1 id="emailErrorMsg"></h1>
                </div>
                <div class="formElement">
                    
                    <label for="email">Email</label>
                    <input class="inpt" type="email" name="email" id="email">
                    
                    <hr>
                    <h1 id="emailErrorMsg"></h1>
                </div>
                <div class="formElement">
                    <label for="phone">phone</label>
                    <input class="inpt" type="text" name="phone" id="phone">
                    
                    <hr>
                    <h1 id="phoneErrorMsg"></h1>
                </div>
                <div class="formElement">
                    <label for="password">Password</label>
                    <div class="inpt" id="specialInpt">
                        <input class="pssInpt" type="password" name="password" id="password">
                     <span class="showPss">show</span>
                    </div>
                    
                    <hr>
                </div>
                <div class="formElement">
                    <label for="confirmPassword">Confirm Password</label>
                    
                    <input class="inpt" type="password" name="confirmPassword" id="confirmPassword">
                    
                    <hr>
                    <h1 id="passwordErrorMsg"></h1>
                </div>
                <div class="formElement">
                    <input class="submitInpt" type="submit" id="submitbtn" value="SIGN-UP">
                </div>
            </div>
        </div>
       
     </form>

     <div class="footer">
         <p class="adress">visit us at...</p>
         <p class="socialMedia">
             facebook<br>
             instagram<br>
             ourWeb
         </p>
         <p class="gohome">GO HOME</p>
     </div>
    
     <div id="successMessage">
        <p> Welcome </p>
        <p id="userName"></p>
        <p> <button type="submit">My Dashboard</button> </p>
        <p id="span">x</p>
    </div>
    <script src="/scripts/jquerry.js"></script>
</body>
</html>